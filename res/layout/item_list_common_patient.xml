<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:maxHeight="@dimen/listview_item_max_height"
    android:maxWidth="@dimen/listview_item_min_height"
    android:padding="8dip" >

    <LinearLayout
        android:id="@+id/ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="6.0dp" >

            <TextView
                android:id="@+id/tv_item_hospital_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:text="张三"
                android:textSize="@dimen/text_size_middle"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_item_hospital_sex"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10.0dp"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:text="男"
                android:textSize="@dimen/text_size_middle"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_item_hospital_age"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10.0dp"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:text="38岁"
                android:textSize="@dimen/text_size_middle"
                android:textStyle="bold" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_item_hospital_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:padding="6.0dp"
            android:text="电话：18888888"
            android:textSize="@dimen/text_size_middle" />
    </LinearLayout>

    <ImageView
        android:id="@+id/img_edit"
        android:layout_width="40.0dp"
        android:layout_height="40.0dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="8.0dp"
        android:background="@drawable/img_edit"
        android:contentDescription="@string/app_name"
        android:scaleType="fitXY" />

  

</RelativeLayout>