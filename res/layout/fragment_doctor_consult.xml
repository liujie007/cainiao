<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    
    <RelativeLayout 
        android:id="@+id/l1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
         <LinearLayout
        android:layout_marginTop="13dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
        
        <ImageView 
            android:id="@+id/yuyinchat"
            android:layout_marginLeft="14dp"
            android:layout_marginBottom="13dp"
            android:src="@drawable/picandtext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        
        <LinearLayout 
            android:layout_marginLeft="12dp"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView 
                android:textColor="#777777"
                android:textSize="19sp"
                android:paddingTop="10dp"
                android:text="图文咨询"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            
            <TextView 
                android:textSize="14sp"
                android:paddingTop="10dp"
                android:textColor="#777777"
                android:text="通过语音方式与专家咨询交流"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        
        
    </LinearLayout>
     
       <ImageView 
           android:layout_marginTop="10dp"
           android:layout_marginRight="20dp"
           android:layout_alignParentRight="true"
            android:src="@drawable/will_open"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        
    </RelativeLayout>
    
           <View    
               android:layout_marginTop="2dp"   
               android:layout_below="@+id/l1"
                android:id="@+id/deliver_line2"
                android:layout_width="match_parent"
                android:layout_height="5.0dp"
                android:background="@drawable/deliver_line" />
    
    
    <RelativeLayout 
        android:id="@+id/l2"
        android:layout_below="@+id/deliver_line2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
         <LinearLayout
        android:layout_marginTop="13dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
        
        <ImageView 
            android:layout_marginLeft="14dp"
            android:src="@drawable/phone_ask"
            android:layout_width="wrap_content"
            android:layout_marginBottom="13dp"
            android:layout_height="wrap_content"/>
        
        <LinearLayout 
            android:layout_marginLeft="12dp"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView 
                android:textColor="#777777"
                android:textSize="19sp"
                android:paddingTop="10dp"
                android:text="电话咨询"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            
            <TextView 
                android:textSize="14sp"
                android:paddingTop="10dp"
                android:textColor="#777777"
                android:text="通过电话预定方式与专家咨询交流"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        
        
    </LinearLayout>
     
       <ImageView 
           android:layout_marginTop="10dp"
           android:layout_marginRight="20dp"
           android:layout_alignParentRight="true"
            android:src="@drawable/will_open"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        
    </RelativeLayout>
    <View    
        android:id="@+id/lin3"
               android:layout_marginTop="2dp"   
               android:layout_below="@+id/l2"
                android:layout_width="match_parent"
                android:layout_height="5.0dp"
                android:background="@drawable/deliver_line" />
    
       <RelativeLayout 
           android:id="@+id/rrr"
        android:layout_below="@+id/lin3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
         <LinearLayout
        android:layout_marginTop="13dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
        
        <ImageView 
            android:layout_marginLeft="14dp"
            android:layout_marginBottom="13dp"
            android:src="@drawable/shipin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        
        <LinearLayout 
            android:layout_marginLeft="12dp"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView 
                android:textColor="#777777"
                android:textSize="19sp"
                android:paddingTop="10dp"
                android:text="视频咨询"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            
            <TextView 
                android:textSize="14sp"
                android:paddingTop="10dp"
                android:textColor="#777777"
                android:text="通过视频方式与专家咨询交流"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        
        
    </LinearLayout>
     
       <ImageView 
           android:layout_marginTop="10dp"
           android:layout_marginRight="20dp"
           android:layout_alignParentRight="true"
            android:src="@drawable/will_open"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        
    </RelativeLayout>
    
       <View    
               android:layout_marginTop="2dp"   
               android:layout_below="@+id/rrr"
                android:layout_width="match_parent"
                android:layout_height="5.0dp"
                android:background="@drawable/deliver_line" />
       
</RelativeLayout>