<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="55.0dp"
    android:background="#FFF6EA"
    android:padding="10.0dp" >

    <TextView
        android:id="@+id/tv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="@string/now_price"
        android:textSize="@dimen/text_size_middle" />

    <TextView
        android:id="@+id/tv_phymenu_now_price1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@id/tv1"
        android:textColor="@color/red"
        android:text="34"
        android:textSize="26.0sp" />

    <TextView
        android:id="@+id/tv_phymenu_original_price1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/number1"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@id/tv_phymenu_now_price"
        android:textSize="@dimen/text_size_middle" />

    <Button
        android:id="@+id/btn_phymenu_buy"
        android:layout_width="80.0dp"
        android:layout_height="30.0dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/selector_buy"
        android:text="@string/buy"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_small" />

</RelativeLayout>