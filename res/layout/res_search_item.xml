<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:maxHeight="80.0dp"
    android:maxWidth="80.0dp"
    android:padding="8dip" >

    <ImageView
        android:id="@+id/img_item_doctor"
        android:layout_width="80dip"
        android:layout_height="80dip"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:background="@drawable/img_doctor"
        android:contentDescription="@string/app_name"
        android:scaleType="fitXY" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80.0dp"
        android:layout_toRightOf="@id/img_item_doctor"
        android:orientation="vertical"
        android:paddingLeft="10dip" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0.0dp"
            android:layout_weight="1.5"
            android:gravity="center_vertical"
            android:orientation="vertical" >
            <LinearLayout
                android:layout_weight="1"
                 android:orientation="horizontal" 
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >
          <TextView
            android:id="@+id/tv_item_doctor_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:text="钟汉良"
            android:textSize="20sp"
            android:textStyle="bold" />
            
            <TextView
                android:id="@+id/doc_level"
                android:textSize="14.5sp"
                android:textColor="#424344" 
                android:layout_marginLeft="10dp"
                
                android:text="教授砖家"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            
            </LinearLayout>
       
            
           <LinearLayout 
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            
             <TextView
                android:id="@+id/hospital"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="湖南湘雅副二医院"
                android:textColor="#777777"
                android:textSize="17sp" />
             
             <TextView 
                 android:id="@+id/doc_keshi"
                 android:text="眼科"
                 android:textColor="#777777"
                 android:textSize="17sp"
                 android:layout_marginLeft="10dp"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"/>
        </LinearLayout>

           

            <TextView
                 android:layout_weight="1"
                android:id="@+id/good_at"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:singleLine="true"
                android:textSize="16sp"
                android:text="擅长：白内障，清关用，什么都会"
                android:textColor="#bdbbc3" />
        </LinearLayout>
        
        
    </LinearLayout>

    

</RelativeLayout>