<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300.0dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/corners_bg"
    android:gravity="center"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/tv_custom_alertdialog_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/black"
        android:layout_marginTop="8.0dp"
       
        android:textSize="@dimen/text_size_large" />

    <TextView
        android:id="@+id/tv_custom_alertdialog_msg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:padding="5.0dp"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_middle" />

    <LinearLayout
        android:id="@+id/buttonLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_marginBottom="20.0dp"
        android:gravity="center"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/btn_custom_alertdialog_cancel"
            android:layout_width="0.0dp"
            android:layout_height="35.0dp"
            android:layout_marginLeft="20.0dp"
            android:layout_weight="1.0"
            android:background="@drawable/button_cancel"
            android:text="@string/cancel" />

        <Button
            android:id="@+id/btn_custom_alertdialog_confirm"
            android:layout_width="0.0dp"
            android:layout_height="35.0dp"
            android:layout_marginLeft="20.0dp"
            android:layout_marginRight="20.0dp"
            android:layout_weight="1.0"
            android:background="@drawable/button_confirm"
            android:text="@string/confirm"
            android:textColor="@color/white" />
    </LinearLayout>

</LinearLayout>