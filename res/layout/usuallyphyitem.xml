<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
        <ImageView 
            android:id="@+id/xiugai"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/xiugai_patient"
            android:layout_width="50dp"
            android:layout_height="50dp"/>
          
          
          <TextView 
                android:id="@+id/name"
                android:textSize="@dimen/text_size_large"
                android:text="張三"
                android:layout_centerVertical="true"
                android:layout_marginLeft="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
          
          <View 
              android:layout_marginLeft="8dp"
              android:layout_centerVertical="true"
              android:id="@+id/view"
              android:layout_toRightOf="@+id/name"
              android:background="#4b83e7"
              android:layout_width="1dp"
              android:layout_height="40dp"/>
        
        <LinearLayout 
            android:layout_toRightOf="@+id/view"
            android:id="@+id/wenzi"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="6dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <LinearLayout 
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            
             <TextView 
                android:layout_marginLeft="8dp"
                android:text="手机号码："
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            
             <TextView 
                 android:id="@+id/phone"
                 android:textSize="@dimen/text_size_narge"
                 android:layout_marginLeft="16dp"
                android:text="15973184231"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        
        <LinearLayout
            android:layout_marginTop="8dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
             
              <TextView 
                android:layout_marginLeft="8dp"
                android:text="身份证号："
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            
             <TextView 
                 android:id="@+id/idcard"
                 android:textSize="@dimen/text_size_narge"
                 android:layout_marginLeft="16dp"
                android:text="430524199209195996"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
           
        </LinearLayout>
  
       </LinearLayout>
       <View 
           android:layout_marginTop="15dp"
           android:layout_below="@+id/wenzi"
           android:background="@color/gray"
           android:layout_width="match_parent"
           android:layout_height="2dp"/>
        
    </RelativeLayout>
    
    
    
    
    

</RelativeLayout>
