<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    style="@style/lin_layout_top_h"
    android:background="@color/white"
    >

    <ImageView
        android:id="@+id/im_heath_shop_img"
        android:layout_width="@dimen/list_image_w"
        android:layout_height="@dimen/list_image_h"
        android:contentDescription="@string/app_name"
        android:scaleType="fitXY"
        android:layout_margin="10dp"
        />

    <LinearLayout
        style="@style/lin_layout_top_v"
        android:layout_height="wrap_content"
        android:padding="10dp"
       >

       <TextView
            android:id="@+id/tv_mtile"
            style="@style/heath_wrap"
            android:text=""
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_middle"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_tile"
            style="@style/heath_wrap"
            android:layout_marginTop="5dp"
            android:text=""
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_narge" />

        

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_heath_shop_moeny"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="价格："
                  android:textColor="@color/black"
                android:textSize="@dimen/text_size_middle" />
            <TextView
                android:id="@+id/tv_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="￥0.0"
                android:textColor="@color/red"
                android:textSize="@dimen/text_size_large" />

            <TextView
                android:id="@+id/tv_heath_shop_start_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="1dp"
                android:text="数量：1"
                  android:textColor="@color/black"
                android:textSize="@dimen/text_size_middle" />
        </LinearLayout>
         <Button 
        android:text="评价"
         android:layout_gravity="right"
        android:id="@+id/btn_pj"
        android:visibility="gone"
        android:layout_width="80dp"
        style="@style/button_confirm"/>
    </LinearLayout>

</LinearLayout>