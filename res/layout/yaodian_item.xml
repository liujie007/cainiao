<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp" >

        <ImageView
            android:id="@+id/yaodian_img"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginTop="5dp"
            android:layout_alignParentLeft="true"
            android:src="@drawable/doc_moren" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
      
            android:layout_toRightOf="@+id/yaodian_img"
            android:orientation="vertical"
            android:paddingLeft="20dp" >

            <TextView
                android:id="@+id/taodian_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="名称"
                android:textColor="#424344"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/yaodian_distance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="距离:320m"
                android:padding="5dp"
                android:textColor="#777777"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/yaodian_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="地址："
                android:padding="5dp"
                android:textColor="#777777"
                android:textSize="14sp" />
        </LinearLayout>

        <ImageView
            android:id="@+id/img_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:src="@drawable/img_item_arrow" />
    </RelativeLayout>

</LinearLayout>