<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="#ffffff"
    android:layout_height="match_parent" >

    <include
        android:id="@+id/layout_common_title"
        layout="@layout/layout_common_title" />
        
      <ListView
       android:id="@+id/Usually_phypatientList"
        android:background="@color/white"
        android:divider="@color/deliver_line"       
         android:layout_below="@+id/layout_common_title"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
      </ListView>

                
           
            
            
        <LinearLayout
        android:layout_marginLeft="38dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Usually_phypatientList"
        android:layout_marginTop="5dp"
        android:gravity="center_vertical"
        android:orientation="horizontal" >
        
        <ImageView
            android:id="@+id/add1"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/add_patient" />
        <TextView
            android:id="@+id/nums"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="您还可添加5位体检人"
            android:textColor="#424344"
            android:textSize="16sp" />
        
   </LinearLayout>
           
     
    
    
     

   

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:gravity="center" >

        
    </RelativeLayout>
    
    

</RelativeLayout>