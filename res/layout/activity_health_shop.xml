<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/lin_layout_top_v"
    android:background="@color/gray" >
    
    <include 
        layout="@layout/layout_common_title"/>
    
    <LinearLayout 
        style="@style/lin_layout_top_h"
        android:layout_height="50dp"
        android:background="@color/white"
        >
        <LinearLayout 
            style="@style/lin_layout_top_h"
            android:layout_weight="1"
            android:gravity="center"
           >
            <TextView 
                android:id="@+id/tv_sales"
                style="@style/heath_tab_txt"
                android:text="销量"
                android:textSize="@dimen/text_size_middle"
                android:textColor="@color/blue"
                />
        </LinearLayout>
        
        <LinearLayout 
            style="@style/lin_layout_top_h"
            android:layout_weight="1"
             android:gravity="center"
           >
             <TextView 
                 android:id="@+id/tv_new"
                style="@style/heath_tab_txt"
                android:text="新品"
                 android:textSize="@dimen/text_size_middle"
                />
        </LinearLayout>
        
        <LinearLayout 
            style="@style/lin_layout_top_h"
            android:layout_weight="1"
             android:gravity="center"
           >
             <TextView 
                 android:id="@+id/tv_price"
                style="@style/heath_tab_txt"
                android:text="价格"
                 android:textSize="@dimen/text_size_middle"
                android:layout_width="wrap_content"
                />
                 <TextView 
                     android:id="@+id/tv_price_flag"
                      style="@style/heath_tab_txt"
                      android:layout_width="12dp"
                      android:layout_height="12dp"
                      android:layout_marginTop="1dp"
                     android:background="@drawable/heath_des"/>
        </LinearLayout>
        
        <LinearLayout 
            style="@style/lin_layout_top_h"
            android:layout_weight="1"
             android:gravity="center"
           >
             <TextView 
                android:id="@+id/tv_des"
                style="@style/heath_tab_txt"
                android:text="筛选"
                 android:textSize="@dimen/text_size_middle"
                />
        </LinearLayout>
    </LinearLayout>

    <com.jmheart.view.listview.RefreshListView
        android:id="@+id/heath_list_shop" 
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:dividerHeight="1dp"
        android:scrollbars="none"
        android:background="@color/white"
        android:divider="@drawable/heath_dive"/>
</LinearLayout>
