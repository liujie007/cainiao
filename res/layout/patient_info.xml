<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="#ffffff"
    android:layout_height="match_parent" >
    
     <include
        android:id="@+id/layout_common_title"
        layout="@layout/layout_common_title" />
     
     <ScrollView
         android:layout_below="@+id/layout_common_title"
         android:layout_width="match_parent"
         android:layout_height="wrap_content" >
         
         <LinearLayout 
             
             android:orientation="vertical"
             android:layout_width="match_parent"
             android:layout_height="wrap_content">
      <LinearLayout
          android:layout_marginTop="5dp"
          android:gravity="center_vertical"
         android:orientation="horizontal"
         android:layout_width="match_parent"
         android:layout_height="@dimen/add_usually_patient" >
        <TextView 
             android:layout_marginLeft="26dp"
             android:textSize="@dimen/text_size_middle"
             android:textColor="#777777"
             android:text="姓名："
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"/>
         
         <TextView 
             android:id="@+id/name_x"
             android:background="@null"
             android:layout_weight="1"
             android:textColor="#181818"
             android:textSize="@dimen/text_size_large"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_marginLeft="55dp"
             android:text=""/>
         <TextView 
             android:id="@+id/relate"
             android:layout_marginRight="25dp"
             android:textSize="@dimen/text_size_middle"
             android:textColor="#777777"
             android:text=""
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"/>  
         
  
     </LinearLayout>
     <View 
         android:id="@+id/view1"
         android:background="#bdbbc3"
         android:layout_width="match_parent"
         android:layout_height="1dp"/>

     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="@dimen/add_usually_patient"
         android:gravity="center_vertical"
         android:orientation="horizontal" >

         <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_marginLeft="26dp"
             android:text="性别："
             android:textColor="#777777"
             android:textSize="@dimen/text_size_middle" />

         <TextView
             android:id="@+id/sex"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_weight="0.13"
             android:background="@null"
             android:layout_marginLeft="55dp"
             android:text=""
             android:textColor="#181818"
             android:textSize="@dimen/text_size_large" />
     </LinearLayout>

      <View 
         
         android:background="#bdbbc3"
         android:layout_margin="10dp"
         android:layout_width="match_parent"
         android:layout_height="1dp"/>
     
     <LinearLayout
         android:gravity="center_vertical"
         android:orientation="horizontal"
         android:layout_width="match_parent"
         android:layout_height="@dimen/add_usually_patient" >
        <TextView 
             android:layout_marginLeft="26dp"
             android:textSize="@dimen/text_size_middle"
             android:textColor="#777777"
             android:text="年龄："
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/age"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="55dp"
            android:background="@null"
            android:text=""
            android:textColor="#181818"
            android:textSize="@dimen/text_size_large" />
  
     </LinearLayout>
      <View 
         
         android:background="#bdbbc3"
         android:layout_margin="10dp"
         android:layout_width="match_parent"
         android:layout_height="1dp"/>
     <LinearLayout
         android:gravity="center_vertical"
         android:orientation="horizontal"
         android:layout_width="match_parent"
         android:layout_height="@dimen/add_usually_patient" >
        <TextView 
             android:layout_marginLeft="26dp"
             android:textSize="@dimen/text_size_middle"
             android:textColor="#777777"
             android:text="身份证号："
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"/>
         
         <TextView 
             android:background="@null"
             android:id="@+id/idcard"
             android:textColor="#181818"
             android:textSize="@dimen/text_size_large"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_marginLeft="21dp"
             android:text=""/>
     </LinearLayout>
      <View 
      
         android:background="#bdbbc3"
         android:layout_margin="10dp"
         android:layout_width="match_parent"
         android:layout_height="1dp"/>
     <LinearLayout
         android:gravity="center_vertical"
         android:orientation="horizontal"
         android:layout_width="match_parent"
         android:layout_height="@dimen/add_usually_patient" >
        <TextView 
             android:layout_marginLeft="26dp"
             android:textSize="@dimen/text_size_middle"
             android:textColor="#777777"
             android:text="联系电话："
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"/>
         
         <TextView 
             android:layout_weight="1"
             android:background="@null"
             android:id="@+id/phone"
             android:textColor="#181818"
             android:textSize="@dimen/text_size_large"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_marginLeft="21dp"
             android:text=""/>
         <ImageView 
             android:layout_marginRight="20dp"
             android:src="@drawable/img_item_arrow"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"/>
      
     </LinearLayout>
      <View 
         android:background="#bdbbc3"
         android:layout_margin="10dp"
         android:layout_width="match_parent"
         android:layout_height="1dp"/>
         <LinearLayout
         android:gravity="center_vertical"
         android:orientation="horizontal"
         android:layout_width="match_parent"
         android:layout_height="@dimen/add_usually_patient" >
        <TextView 
             android:layout_marginLeft="26dp"
             android:textSize="@dimen/text_size_middle"
             android:textColor="#777777"
             android:text="就诊卡号："
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"/>
         
         <TextView
             android:layout_weight="1"
             android:background="@null"
             android:id="@+id/kanum"
             android:textColor="#181818"
             android:textSize="@dimen/text_size_large"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_marginLeft="21dp"
             android:text=""/>
         <ImageView 
             android:layout_marginRight="20dp"
             android:src="@drawable/img_item_arrow"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"/>
         
          
       
     </LinearLayout>
     <View 
         
         android:background="#bdbbc3"
         android:layout_margin="10dp"
         android:layout_width="match_parent"
         android:layout_height="1dp"/>
     
     
        
    
             
             
       </LinearLayout>
       
              
         
         
         
     </ScrollView>

       
         
        
         
         
    
     
     
    

</RelativeLayout>
