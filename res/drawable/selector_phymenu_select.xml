<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_checked="false"><shape>
            <corners android:bottomLeftRadius="1dp" android:bottomRightRadius="1dp" android:topLeftRadius="1dp" android:topRightRadius="1dp" />

            <solid android:color="@color/white" />

            <stroke android:width="1dp" android:color="@color/deliver_line" />
        </shape></item>
    <item android:state_checked="true"><shape>
            <corners android:bottomLeftRadius="1dp" android:bottomRightRadius="1dp" android:topLeftRadius="1dp" android:topRightRadius="1dp" />

            <solid android:color="@color/blue" />

            <stroke android:width="1dp" android:color="@color/blue" />
        </shape></item>

</selector>